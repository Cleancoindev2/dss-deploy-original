#!/usr/bin/env bash

[[ -z $TMP_FILE ]] && {
  nonce=$(seth nonce "$ETH_FROM")
  TMP_FILE=$(mktemp /tmp/nonce.XXXXXX)
  echo "$nonce" > "$TMP_FILE"
  export TMP_FILE
}

# shellcheck source=bin/lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh"

export ETH_FROM=${ETH_FROM:-$(seth rpc eth_coinbase)}

dappBuild

test -z "$COL1" && COL1=$(dappCreate Token1 "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")")
test -z "$PIP_COL1" && PIP_COL1=$(dappCreate DSValue)
export COL1
export PIP_COL1

# shellcheck source=/dev/null
source "$BIN_DIR/deploy-ilk" "COL1" "${1:-"A"}" "GemJoin"
