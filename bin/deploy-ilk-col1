#!/usr/bin/env bash

# shellcheck source=bin/lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh"

export ETH_FROM=${ETH_FROM:-$(seth rpc eth_coinbase)}

dappBuild

ETH_NONCE=${ETH_NONCE:-$(seth nonce "$ETH_FROM")}

test -z "$COL1" && COL1=$(ETH_NONCE=$ETH_NONCE dapp create Token1 "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")") && ETH_NONCE=$((ETH_NONCE + 1))

test -z "$PIP_COL1" && PIP_COL1=$(ETH_NONCE=$ETH_NONCE dapp create DSValue) && ETH_NONCE=$((ETH_NONCE + 1))

export ETH_NONCE
export COL1
export PIP_COL1

# shellcheck source=/dev/null
source "$BIN_DIR/deploy-ilk" "COL1" "${1:-"A"}" "GemJoin"
