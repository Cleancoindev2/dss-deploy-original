#!/usr/bin/env bash

# shellcheck source=bin/lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh"

export ETH_FROM=${ETH_FROM:-$(seth rpc eth_coinbase)}

dappBuild

ETH_NONCE=${ETH_NONCE:-$(seth nonce "$ETH_FROM")}

test -z "$COL4" && COL4=$(ETH_NONCE=$ETH_NONCE dapp create Token4 "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")") && ETH_NONCE=$((ETH_NONCE + 1))

test -z "$PIP_COL4" && PIP_COL4=$(ETH_NONCE=$ETH_NONCE dapp create DSValue) && ETH_NONCE=$((ETH_NONCE + 1))

export ETH_NONCE
export COL4
export PIP_COL4

# shellcheck source=/dev/null
source "$BIN_DIR/deploy-ilk" "COL4" "${1:-"A"}" "GemJoin"
