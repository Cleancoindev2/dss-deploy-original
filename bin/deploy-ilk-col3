#!/usr/bin/env bash

[[ -z $TMP_FILE ]] && {
  nonce=$(seth nonce "$ETH_FROM")
  TMP_FILE=$(mktemp /tmp/nonce.XXXXXX)
  echo "$nonce" > "$TMP_FILE"
  export TMP_FILE
}

# shellcheck source=bin/lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh"

export ETH_FROM=${ETH_FROM:-$(seth rpc eth_coinbase)}

dappBuild

test -z "$COL3" && COL3=$(dappCreate Token3 "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")")
test -z "$PIP_COL3" && PIP_COL3=$(dappCreate DSValue)
export COL3
export PIP_COL3

# shellcheck source=/dev/null
source "$BIN_DIR/deploy-ilk" "COL3" "${1:-"A"}" "GemJoin2"
