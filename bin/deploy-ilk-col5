#!/usr/bin/env bash

# shellcheck source=bin/lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh"

export ETH_FROM=${ETH_FROM:-$(seth rpc eth_coinbase)}

dappBuild

ETH_NONCE=${ETH_NONCE:-$(seth nonce "$ETH_FROM")}
export ETH_NONCE

test -z "$COL5" && COL5=$(dapp create Token5 "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")") && ETH_NONCE=$((ETH_NONCE + 1))

test -z "$PIP_COL5" && PIP_COL5=$(dapp create DSValue) && ETH_NONCE=$((ETH_NONCE + 1))

export COL5
export PIP_COL5

# shellcheck source=/dev/null
source "$BIN_DIR/deploy-ilk" "COL5" "${1:-"A"}" "GemJoin3"
